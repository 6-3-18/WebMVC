
@{
    ViewBag.Title = "EditEMP";
}

@Model   WebApplication1.Models.EMP;

<h2>修改 員工基本檔</h2>
<br />

<form method="post" action="/Home/EditEMP">
    <div class="form-group row">
        <label for="inputEMPID" class="col-sm-2">員工代號</label>
        <div class="col-sm-10">
            <input type="text" id="inputEMPID" name="EMP_ID" class="form-control" value="@Model.Emp_ID"  readonly/>
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEMPName" class="col-sm-2">員工姓名</label>
        <div class="col-sm-10">
            <input type="text" id="inputEMPName" name="EMP_NAME" class="form-control" value="@Model.Emp_Name" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputAGE" class="col-sm-2">年齡</label>
        <div class="col-sm-10">
            <input type="number" id="inputAGE" name="AGE" class="form-control" value="@Model.Age" />
        </div>
    </div>
    <div class="form-group row">
        <label for="inputBirthday" class="col-sm-2">生日</label>
        <div class="col-sm-10">
            <input type="number" id="inputBirthday" name="Birthday" class="form-control" value="@Model.Birthday" />
        </div>
    </div>
    <input class="btn btn-default" type="submit" value="存檔" />
</form>

